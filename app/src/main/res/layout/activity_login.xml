<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

         <variable name="viewmodel" type="lk.sliit.movieapp.viewModel.LoginViewModel"/>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/root_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.LoginActivity">

        <TextView
                android:id="@+id/welcomeText"
                android:layout_width="239dp"
                android:layout_height="99dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="192dp"
                android:text="WELCOME "
                android:textColor="@color/colorPrimary"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/useredit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


        <EditText
                android:id="@+id/useredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="264dp"
                android:ems="10"
                android:hint="username"
                android:text="@={viewmodel.username}"
                android:inputType="textPersonName"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.516" />

        <EditText
                android:id="@+id/pwedit"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="364dp"
                android:ems="10"
                android:hint="password"
                android:text="@={viewmodel.password}"
                android:inputType="textPassword"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/useredit"
                app:layout_constraintTop_toBottomOf="@+id/useredit"
                app:layout_constraintVertical_bias="1.0" />

        <Button
                android:id="@+id/logBtn"
                android:layout_width="126dp"
                android:layout_height="99dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="132dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="Login"
                android:onClick="@{viewmodel::onLoginButtonClick}"
                android:textAlignment="center"
                android:textSize="24sp"
                android:typeface="monospace"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.014"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pwedit"
                app:layout_constraintVertical_bias="0.016" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>